{
	"elements": [{
			"type": "Section",
			"label": "OAuth2 Service",
			"elements": [{
					"type": "Control",
					"scope": "#/properties/model/properties/tokenUrl"
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/tokenRequestMethod",
					"options": {
						"format": "valueSwitch"
					}
				}
			]
		},
		{
			"type": "Section",
			"label": "Client/Application",
			"elements": [{
					"type": "Control",
					"scope": "#/properties/model/properties/clientType",
					"options": {
						"format": "valueSwitch"
					}
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/clientId"
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/clientSecret",
					"rule": {
						"effect": "SHOW",
						"condition": {
							"scope": "#/properties/model/properties/clientType",
							"schema": {
								"oneOf": [{
									"const": "CONFIDENTIAL"
								}]
							}
						}
					}
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/clientAuthMechanism",
					"options": {
						"format": "valueSwitch"
					},
					"rule": {
						"effect": "SHOW",
						"condition": {
							"scope": "#/properties/model/properties/clientType",
							"schema": {
								"oneOf": [{
									"const": "CONFIDENTIAL"
								}]
							}
						}
					}
				}
			]
		},
		{
			"type": "Section",
			"label": "Username and Password",
			"elements": [{
					"type": "Control",
					"scope": "#/properties/model/properties/pwdGrantUsername"
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/pwdGrantPassword"
				}
			]
		},
		{
			"type": "Section",
			"label": "Scopes",
			"elements": [{
				"type": "Control",
				"scope": "#/properties/model/properties/scopes"
			}]
		}
	]
}
