{
	"elements": [
		{
			"type": "Section",
			"label": "OAuth Service",
			"elements": [
				{
					"type": "Control",
					"scope": "#/properties/model/properties/serviceType",
					"options": {
						"format": "valueSwitch"
					}
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/standardService",
					"options": {
						"format": "columnSelection",
						"showRowKeys": false,
						"showNoneColumn": false
					},
					"rule": {
						"effect": "SHOW",
						"condition": {
							"scope": "#/properties/model/properties/serviceType",
							"schema": {
								"oneOf": [
									{
										"const": "STANDARD"
									}
								]
							}
						}
					}
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/authorizationUrl",
					"rule": {
						"effect": "SHOW",
						"condition": {
							"scope": "#/properties/model/properties/serviceType",
							"schema": {
								"oneOf": [
									{
										"const": "CUSTOM"
									}
								]
							}
						}
					}
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/tokenUrl",
					"rule": {
						"effect": "SHOW",
						"condition": {
							"scope": "#/properties/model/properties/serviceType",
							"schema": {
								"oneOf": [
									{
										"const": "CUSTOM"
									}
								]
							}
						}
					}
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/tokenRequestMethod",
					"options": {
						"format": "valueSwitch"
					},
					"rule": {
						"effect": "SHOW",
						"condition": {
							"scope": "#/properties/model/properties/serviceType",
							"schema": {
								"oneOf": [
									{
										"const": "CUSTOM"
									}
								]
							}
						}
					}
				}
			]
		},
		{
			"type": "Section",
			"label": "Client/Application",
			"elements": [
				{
					"type": "Control",
					"scope": "#/properties/model/properties/clientType",
					"options": {
						"format": "valueSwitch"
					}
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/clientId"
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/clientSecret",
					"rule": {
						"effect": "SHOW",
						"condition": {
							"scope": "#/properties/model/properties/clientType",
							"schema": {
								"oneOf": [
									{
										"const": "CONFIDENTIAL"
									}
								]
							}
						}
					}
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/clientAuthMechanism",
					"options": {
						"format": "valueSwitch"
					},
					"rule": {
						"effect": "SHOW",
						"condition": {
							"scope": "#/properties/model/properties",
							"schema": {
							    "properties": {
							        "clientType" : {
								        "oneOf": [
									        {
										        "const": "CONFIDENTIAL"
									        }
        								]
							        },
							        "serviceType" : {
								        "oneOf": [
									        {
										        "const": "CUSTOM"
									        }
        								]
							        }
							    }
							}
						}
					}
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/redirectUrl"
				}
			]
		},
		{
			"type": "Section",
			"label": "Scopes",
			"elements": [
				{
					"type": "Control",
					"scope": "#/properties/model/properties/scopes"
				}
			]
		}
	]
}
