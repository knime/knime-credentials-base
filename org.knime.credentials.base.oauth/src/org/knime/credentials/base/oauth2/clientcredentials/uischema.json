{
	"elements": [
	    {
			"type": "Section",
			"label": "OAuth2 Service",
			"elements": [
			    {
					"type": "Control",
					"scope": "#/properties/model/properties/tokenUrl"
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/tokenRequestMethod",
					"options": {
						"format": "valueSwitch"
					}
				}
			]
		},
		{
			"type": "Section",
			"label": "Client/Application",
			"elements": [{
					"type": "Control",
					"scope": "#/properties/model/properties/clientId"
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/clientSecret"
				},
				{
					"type": "Control",
					"scope": "#/properties/model/properties/clientAuthMechanism",
					"options": {
						"format": "valueSwitch"
					}
				}
			]
		},
		{
			"type": "Section",
			"label": "Scopes",
			"elements": [{
				"type": "Control",
				"scope": "#/properties/model/properties/scopes"
			}]
		},
	    {
			"type": "Section",
			"label": "Additional request fields",
			"elements": [
			    {
					"type": "Control",
					"scope": "#/properties/model/properties/additionalRequestFields",
					"options": {
						"addButtonText": "Add field",
						"showSortButtons": false,
						"detail": {
						    "field": { 
						        "type": "HorizontalLayout",
                                "elements": [
                                    {
                                        "type": "Control",
                                        "scope": "#/properties/name"
                                    },
                                    {
                                        "type": "Control",
                                        "scope": "#/properties/value"
                                    }
                                ]
                            }
						}
					}
				}
			]
		}
	]
}
